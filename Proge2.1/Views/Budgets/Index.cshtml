@model PagedResult<Proge2._1.Data.Budget>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Client
            </th>
            <th>
                Date
            </th>
            <th>
                ServiceCost
            </th>
            <th>
                TotalCost
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                <td>
                        @Html.DisplayFor(modelItem => item.Client)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.ServiceCost)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.TotalCost)
                </td>

            <td>
                    <a asp-action="Edit" asp-route-id="@item.BudgetId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BudgetId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BudgetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
