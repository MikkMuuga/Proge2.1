@model PagedResult<Proge2._1.Data.Comment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                CommentId
            </th>
            <th>
                Content
            </th>
            <th>
                User
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                <td>
                        @Html.DisplayFor(modelItem => item.CommentId)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.User)
                </td>

            <td>
                    <a asp-action="Edit" asp-route-id="@item.CommentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CommentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CommentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
